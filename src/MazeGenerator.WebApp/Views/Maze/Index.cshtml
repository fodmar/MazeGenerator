@section scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/react/16.2.0/umd/react.development.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/react-dom/16.2.0/umd/react-dom.development.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-standalone/6.26.0/babel.js"></script>
}

<div id="mazeGenerationOptionsForm"></div>
<div>
    <label for="width">Width:</label>
    <input id="width" name="width" type="text" />
    <label for="height">Height:</label>
    <input id="height" name="height" type="text" />
    <button onclick="generate()">Generate</button>
</div>

<fieldset>
    <legend>Image</legend>
    <img id="image" />
</fieldset>

<script>
    function generate() {
        var width = document.getElementById("width");
        var height = document.getElementById("height");
        var url = "@Url.Action("Generate", "Maze")?width=" + width.value + "&height=" + height.value;

        document.getElementById("image").src = url;
    };
</script>

<script type="text/babel" src="@Url.Content("~/Scripts/mazeGenerationOptionsForm.js")"></script>
<script type="text/babel">
    ReactDOM.render(
        <MazeGenerationOptionsFrom />,
        document.getElementById('mazeGenerationOptionsForm')
    );
</script>